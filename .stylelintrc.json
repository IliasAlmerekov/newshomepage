{
  "extends": ["stylelint-config-standard", "stylelint-config-html"],
  "rules": {
    "no-empty-source": null,
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9]+$",
      {
        "message": "Selector should be written in lowerCamelCase",
        "resolveNestedSelectors": true
      }
    ]
  }
}
