---
import '../../../styles/style.css'
import { useStoryblokApi } from "@storyblok/astro";

export interface footerItem {
  copyright?: string,
}

export interface footerItems {
  link?: any,
  title?: string,
}

export interface footer {
  Navigation?: footerItems[],
}

const storyblokApi = useStoryblokApi()

const {data} =await storyblokApi.get(`cdn/stories/globals/f2footer`, {
  version:
  (import.meta.env.STORYBLOK_IS_PREVIEW || process.env.STORYBLOK_IS_PREVIEW) === "yes"
  ? 'draft'
  : 'published'
})

const footerNavigation = data.story.content;
---


<footer class="footer">
  <div class="footer-navigation">
      <p>{footerNavigation.copyright}</p>
      <nav class="footer-nav">
        {footerNavigation.Navigation?.map((item: any) =>   <a href={item.link.cached_url}>{item.title}</a>)}
      </nav>
    </div>
  </footer>
  
  <style>

    .footer {
      padding-top: 90px;
    }

    .footer-navigation {
      background-color: var(--very-dark-blue);
      color: var(--off-white);
      padding: 1rem 2rem;
      text-align: center;
      justify-content: center;
    }

    .footer-nav {
      margin-top: 1rem;
      display: flex;
      justify-content: center;
      gap: 1.5rem;
    }
  
    .footer-nav a {
      color: var(--soft-orange, #e9a35c);
      text-decoration: none;
      font-weight: 700;
      transition: color 0.3s ease;
    }
  
    .footer-nav a:hover {
      color: var(--soft-red, #e63946);
    }

    @media screen and (max-width: 475px) {
      .footer {
        padding: 10 0 10px 0;
      }
    }
  </style>
  